# Docker Compose 环境变量示例
# 按需修改并确保不要提交真实密钥

# Gateway
PORT=8080
NEWAPI_BASE_URL=http://newapi:3000
NEWAPI_API_KEY=
JWT_SECRET=please-change-me
JWT_ISSUER=deepspace
JWT_EXPIRES_IN_SECONDS=86400
JWT_COOKIE_NAME=dsp_session
JWT_COOKIE_SECURE=false

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=deepspace
DB_SSLMODE=disable
DB_AUTO_MIGRATE=true
DB_RESET_ON_START=false

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_QUEUE_KEY=email:queue

# Knowledge Base
KB_STORAGE_PATH=/data/kb
KB_MAX_UPLOAD_MB=25
KB_ALLOWED_MIME=

# Email
EMAIL_ENABLED=true
EMAIL_FROM_NAME=DeepSpace
EMAIL_FROM_ADDRESS=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_TEMPLATE_DIR=/app/templates

# Worker
REDIS_DEAD_KEY=email:dead
EMAIL_QUEUE_TIMEOUT=10
EMAIL_RETRY_MAX=5

# Web
WEB_BASE_URL=http://localhost:8080
