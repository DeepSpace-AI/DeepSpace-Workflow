# NewAPI
NEWAPI_BASE_URL=
NEWAPI_API_KEY=

# Database (compose DSN in config; do not use a single DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=deepspace
DB_SSLMODE=disable

# GORM migration controls
DB_AUTO_MIGRATE=true
DB_RESET_ON_START=false

# JWT auth
JWT_SECRET=
JWT_ISSUER=deepspace
JWT_EXPIRES_IN_SECONDS=86400
JWT_COOKIE_NAME=dsp_session
JWT_COOKIE_SECURE=false

# Email (Gateway/Worker)
EMAIL_ENABLED=false
EMAIL_FROM_NAME=DeepSpace
EMAIL_FROM_ADDRESS=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_TEMPLATE_DIR=./templates

# Redis (Gateway/Worker)
REDIS_URL=redis://[username:password@]hostname:port/db_number?参数=值
REDIS_QUEUE_KEY=email:queue
REDIS_DEAD_KEY=email:dead

# Web
WEB_BASE_URL=

# Worker
EMAIL_QUEUE_TIMEOUT=10
EMAIL_RETRY_MAX=5
